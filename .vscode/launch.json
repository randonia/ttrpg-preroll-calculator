  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug with NPM",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "watch:dev"],
      "restart": true,
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "env": {
        "PORT": "3000"
      },
      "console": "integratedTerminal"
    }
  ]
}
